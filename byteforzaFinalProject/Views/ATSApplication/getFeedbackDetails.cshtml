@using  byteforzaFinalProject.DTO;
@*
    For more information on enabling MVC for empty projects, visit https://go.microsoft.com/fwlink/?LinkID=397860
*@
@{
    var details = ViewData["details"] as SingleFeedbackDetails;
}


<!doctype html>
<html lang="en">
  <head>
    <!-- Required meta tags -->
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <link href="https://fonts.googleapis.com/css?family=Roboto:300,400&display=swap" rel="stylesheet">
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/byteforzaFinalProject.styles.css" asp-append-version="true" />
    <script src="~/lib/bootstrap/dist/js/bootstrap.min.js"></script>
    <script src="//code.jquery.com/jquery-1.11.1.min.js"></script>
  </head>
  <style>
    .rating {
        display: flex;
    }
  </style>
  <body>


  <div class="content">

    <div class="container sub-container">

      <div class="table-responsive">

        <table class="table custom-table">
          <thead>
            <tr >
              <th class ="table-heading" scope="col"><strong>Job Details</strong> </th>
              <th></th>
            </tr>
          </thead>
        <tbody>
            <tr>
                <td>
                    Candidate Id
                </td>
                <td>
                    @details.CandidateId
                </td>
            </tr>
            <tr>
                
                <td>
                    Candidate Name
                </td>
                <td>
                                <strong><a href='@Url.Action("IndividualCandidateDetails","ATSApplication",new { candidateId =details.CandidateId, jobId = details.jobId })'>@details.CandidateName</a></strong>
                </td>

            </tr>
            <tr>
                <td>
                    Job Role
                </td>
                <td>
                  <strong> @details.Role</strong>
                </td>

            </tr>
            <tr>
                <td>
                    Type of Round 
                </td>
                <td>
                  <strong>
                    @details.TypeOfRound
                  </strong>

                </td>

            </tr>
            <tr>
                <td>
                    Interview Panel
                </td>
                <td>
                  <strong>
                    @details.InterviewPanel
                  </strong>

                </td>
            </tr>
            <tr>
                <td>
                    Date
                </td>
                <td>
                  <strong>@details.dateOnly</strong>

                </td>
            </tr>

            <tr>
                <td>
                    Time
                </td>
                <td>
                  <strong>
                    @details.timeOnly
                  </strong>

                </td>

            </tr>
            <tr>
                <td>
                    OOPS rating
                </td>
                <td>
                  <strong class="rating">
                    @for (int i = 0; i < details.oops; i++)
                    {
                        <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="#f4f813;" class="bi bi-star-fill" viewBox="0 0 16 16">
                            <path d="M3.612 15.443c-.386.198-.824-.149-.746-.592l.83-4.73L.173 6.765c-.329-.314-.158-.888.283-.95l4.898-.696L7.538.792c.197-.39.73-.39.927 0l2.184 4.327 4.898.696c.441.062.612.636.282.95l-3.522 3.356.83 4.73c.078.443-.36.79-.746.592L8 13.187l-4.389 2.256z" />
                        </svg>
                    }
                    @for (int i = 0; i < 5 - details.oops; i++)
                    {
                        <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="#f4f813;" class="bi bi-star" viewBox="0 0 16 16">
                            <path d="M2.866 14.85c-.078.444.36.791.746.593l4.39-2.256 4.389 2.256c.386.198.824-.149.746-.592l-.83-4.73 3.522-3.356c.33-.314.16-.888-.282-.95l-4.898-.696L8.465.792a.513.513 0 0 0-.927 0L5.354 5.12l-4.898.696c-.441.062-.612.636-.283.95l3.523 3.356-.83 4.73zm4.905-2.767-3.686 1.894.694-3.957a.565.565 0 0 0-.163-.505L1.71 6.745l4.052-.576a.525.525 0 0 0 .393-.288L8 2.223l1.847 3.658a.525.525 0 0 0 .393.288l4.052.575-2.906 2.77a.565.565 0 0 0-.163.506l.694 3.957-3.686-1.894a.503.503 0 0 0-.461 0z" />
                        </svg>
                    }
                  </strong>

                </td>

            </tr>
            <tr>
                <td>
                    Programming rating
                </td>
                <td>
                  <strong>
                        @for (int i = 0; i < details.programming; i++)
                        {
                            <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="#f4f813;" class="bi bi-star-fill" viewBox="0 0 16 16">
                                <path d="M3.612 15.443c-.386.198-.824-.149-.746-.592l.83-4.73L.173 6.765c-.329-.314-.158-.888.283-.95l4.898-.696L7.538.792c.197-.39.73-.39.927 0l2.184 4.327 4.898.696c.441.062.612.636.282.95l-3.522 3.356.83 4.73c.078.443-.36.79-.746.592L8 13.187l-4.389 2.256z" />
                            </svg>
                        }
                                    @for (int i = 0; i < 5 - details.programming; i++)
                        {
                            <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="#f4f813;" class="bi bi-star" viewBox="0 0 16 16">
                                <path d="M2.866 14.85c-.078.444.36.791.746.593l4.39-2.256 4.389 2.256c.386.198.824-.149.746-.592l-.83-4.73 3.522-3.356c.33-.314.16-.888-.282-.95l-4.898-.696L8.465.792a.513.513 0 0 0-.927 0L5.354 5.12l-4.898.696c-.441.062-.612.636-.283.95l3.523 3.356-.83 4.73zm4.905-2.767-3.686 1.894.694-3.957a.565.565 0 0 0-.163-.505L1.71 6.745l4.052-.576a.525.525 0 0 0 .393-.288L8 2.223l1.847 3.658a.525.525 0 0 0 .393.288l4.052.575-2.906 2.77a.565.565 0 0 0-.163.506l.694 3.957-3.686-1.894a.503.503 0 0 0-.461 0z" />
                            </svg>
                        }
                  </strong>

                </td>
            </tr>
            <tr>
                <td>
                    Logical Thinking
                </td>
                <td>
                  <strong>
                    @for (int i = 0; i < details.logicalThinking; i++)
                    {
                        <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="#f4f813;" class="bi bi-star-fill" viewBox="0 0 16 16">
                            <path d="M3.612 15.443c-.386.198-.824-.149-.746-.592l.83-4.73L.173 6.765c-.329-.314-.158-.888.283-.95l4.898-.696L7.538.792c.197-.39.73-.39.927 0l2.184 4.327 4.898.696c.441.062.612.636.282.95l-3.522 3.356.83 4.73c.078.443-.36.79-.746.592L8 13.187l-4.389 2.256z" />
                        </svg>
                    }
                                    @for (int i = 0; i < 5 - details.logicalThinking; i++)
                    {
                        <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="#f4f813;" class="bi bi-star" viewBox="0 0 16 16">
                            <path d="M2.866 14.85c-.078.444.36.791.746.593l4.39-2.256 4.389 2.256c.386.198.824-.149.746-.592l-.83-4.73 3.522-3.356c.33-.314.16-.888-.282-.95l-4.898-.696L8.465.792a.513.513 0 0 0-.927 0L5.354 5.12l-4.898.696c-.441.062-.612.636-.283.95l3.523 3.356-.83 4.73zm4.905-2.767-3.686 1.894.694-3.957a.565.565 0 0 0-.163-.505L1.71 6.745l4.052-.576a.525.525 0 0 0 .393-.288L8 2.223l1.847 3.658a.525.525 0 0 0 .393.288l4.052.575-2.906 2.77a.565.565 0 0 0-.163.506l.694 3.957-3.686-1.894a.503.503 0 0 0-.461 0z" />
                        </svg>
                    }
                  </strong>

              </td>
            </tr>
            <tr>
                <td>
                    Comments
                </td>
                <td>
                    <strong>
                        @details.comments
                    </strong>

                </td>
            </tr>
            <tr>
                <td>
                    Status
                </td>
                <td>
                    <strong>
                        @details.status
                    </strong>

                </td>
            </tr>

          </tbody>
        </table>
        

      </div>

            
    </div>

  </div>



  </body>
</html>