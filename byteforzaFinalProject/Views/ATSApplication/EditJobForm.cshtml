@{
	var job = ViewData["job"] as Job;
}
<!DOCTYPE html>

<html>

<head>


	<script src="//code.jquery.com/jquery-1.11.1.min.js"></script>
	<link rel="stylesheet" type="text/css" href="https://stackpath.bootstrapcdn.com/font-awesome/4.7.0/css/font-awesome.min.css">
	<style>
		main {
			background-color: #fff;
		}
		.wrapper{
			margin: auto;
  width: 100%;
  max-width: 550px;
  background: rgba(231, 239, 248, 0.8);
  padding: 30px;
  border-radius: 5px;
  box-shadow: 0 0 10px rgba(0,0,0,0.3);
}

.wrapper .title h1{
  color: #131313;
  text-align: center;
  margin-bottom: 25px;
}
textarea 
{
	border: none;
	outline: none;
}
input
{
	border: none;
	outline: none;
}
select
{
	border: none;
	outline: none;
}
.input-fields{
  display: flex;
  flex-direction: column;
  margin-right: 4%;
}

.input-fields,
.msg{
  width: 68%;
}
input:active,
textarea:active{
	border: none;
	outline: none;
}
.input-fields .input,
.msg textarea{
  margin: 10px 0;
  background: transparent;
  border: 0px;
  border-bottom: 2px solid #1e1e1e;
  padding: 10px;
  color: #29292a;
  width: 100%;
}

.msg textarea{
  height: 212px;
}

::-webkit-input-placeholder {
  /* Chrome/Opera/Safari */
  color: #212121;
}
:-ms-input-placeholder {
  /* IE 10+ */
  color: #37393a;
}

.btn {
			background: #39b7dd;
			text-align: center;
			padding: 1rem;
			border-radius: 20px;
			color: #2a2929;
			cursor: pointer;
			text-transform: uppercase;
			width: auto;
}
.buttons-section
{
	display: flex;
	justify-content: space-between;
}

@@media screen and (max-width: 600px){
  .contact-form{
	flex-direction: column;
  }
  .msg textarea{
	height: 80px;
  }
  .input-fields,
  .msg{
	width: 100%;
  }
}
	</style>
</head>

<body>

	<div class="wrapper">
		<div class="title">
			<h1>Edit job Details</h1>
		</div>
		<div class="contact-form">
			<div class="input-fields">
				<input type="text" class="input" id="name" placeholder="Name" value="@job.Role">
				<input type="text" class="input" id="location" placeholder="Location" value="@job.Location">
				<br />
				<label><strong>Experince</strong></label>
				<input type="number" class="input" min="0"  value="@job.ExperienceRequired">
				<br />
				<label><strong>Vacccanies</strong></label>
				<input type="number" class="input" id="vaccanies" min="0" value="@job.Vaccanies">
				<label><strong>Type of work</strong></label>
				<select class="input" id="type">
					@if (job.Type == "full time")
					{
						<option value="select one" disabled>select one</option>
						<option value="full time" selected>full time</option>
						<option value="part time">part time</option>
					}
					else
					{
						<option value="select one" disabled>select one</option>
						<option value="full time">full time</option>
						<option value="part time" selected>part time</option>
					}

				</select>
			</div>
			<div class="msg" >
				<textarea id="description" placeholder="job description" >@job.Description</textarea>

			</div>
		</div>
		<div class="buttons-section">
			<div class="btn" onclick="location.href = '@Url.Action("CandidateDetail","ATSApplication")'">cancel</div>
			<div class="btn" id="btnqrt">save changes</div>
		</div>
	</div>
	<script>
		jQuery(document).ready(function () {
			jQuery("#btnqrt").click(function () {
				console.log("clicked");
				var Id = @job.Id;
				var name = jQuery("#name").val();
				var location = jQuery("#location").val();
				var experience = jQuery("#experience").val();
				var vaccanies = jQuery("#vaccanies").val();
				var type = jQuery("#type").val();
				var description = jQuery("#description").val();
				if (name === "") {
					alert("Name column cannot be empty");
				}
				else if (location === "") {
					alert("Location column cannot be empty");
				}
				else if (experience === null) {
					alert("Experience column cannot be empty");
				}
				else if (vaccanies === 0) {
					alert("Vaccanies column cannot be empty");
				}
				else if (type === "") {
					alert("type field cannot be empty");
				}
				else if (description === "") {
					alert("description column cannot be empty");
				}
				else {
					var dataset = {};
					dataset.Id = @job.Id;
					dataset.Role = name;
					dataset.Location = location;
					dataset.ExperienceRequired = experience;
					dataset.Vaccanies = vaccanies;
					dataset.Type = type;
					dataset.Description = description;
					jQuery.ajax({
						type: "POST",
						url: '@Url.Action("EditJob","ATSApplication")',
						data: dataset,
						dataType: 'json',
						success: function (res) {
							if (res.result === "success")
							{
								window.location.href = '@Url.Action("CandidateDetail")';
							}								
							else{
								alert("Error occured while submitting form! contact Administrator");
							}

						},
						error: function (err) {
							console.log(err)
						}

					});
				
				}
			});
		});
		
	</script>

</body>


</html>


